<h1>Plans#index</h1>
<p>Find me in app/views/plans/index.html.erb</p>
<div class="container ">
    <div class="plans clearfix row  justify-content-center">
    <% @plans.each do |pla| %>
      <div class="col-lg-3 col-lg-offset-3 plan">
      
        <h2><%= pla.name %></h2>
        <div class="price pull-right">
          Price: <%= pla.price %>$
        </div>
        <div class="features">
          <ul>
            <li>Unlimited Image Uploads</li>
            <li>Responsive design</li>
            <li>Access anywhere</li>
          </ul>
        </div>
        <p>
          <%= link_to 'Buy', new_user_registration_path,class: 'btn btn-primary sign-up', params: {id: pla.id}, remote: true %>
          <% if current_user.username == 'admin' %>
            <%= link_to 'Edit', edit_plan_path(pla),class: 'btn btn-success sign-up'%>

          <% end %>
        </p>
        
      </div>
      <% end %>
    </div>
  </div>

 